<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/gap_small">

    <TextView
        android:id="@+id/tv_repo_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Repo"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_repo_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_repo_name"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Deskripsi dari repo yang ada sekarang."
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_repo_lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_repo_desc"
        android:text="@string/label_lang"
        android:textColor="?attr/colorPrimary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_repo_stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_repo_desc"
        android:text="@string/label_stars"
        android:textColor="?attr/colorPrimary"
        android:textSize="14sp" />

</RelativeLayout>